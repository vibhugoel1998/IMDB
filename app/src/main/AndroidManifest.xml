<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.vibhu.imdb">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/imdblogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViewAllActivity" />
        <activity
            android:name=".NowPlayingMovieDetails"
            android:label="IMDB"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".openingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StartActivity"
            android:label="IMDB"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TvStartActivity"
            android:label="IMDB"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".TvViewAllActivity" />
        <activity android:name=".AbouUsActivity" />
        <activity
            android:name=".TvDetails"
            android:label="@string/title_activity_tv_details"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".VideoPlaying"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".CastInfo" />
    </application>

</manifest>